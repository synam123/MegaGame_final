<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Thêm Câu Hỏi"
        android:background="#0032FF"
        app:titleTextColor="#fff"
        android:id="@+id/toolbar"/>
    <EditText
        android:id="@+id/edtRequestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="170dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="20dp"
        android:hint="Hãy thêm câu hỏi của bạn"
        android:textColorHint="#C5C5C5"
        android:textColor="#fff"
        android:textSize="17sp"
        android:gravity="center"
        android:background="@drawable/ic_custom_requestion"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recRequestion"/>
    <Button
        android:onClick="onClickSaveRequestion"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="Lưu lại"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="16sp"
        android:background="@drawable/ic_custom_button"
        android:layout_marginTop="10dp"/>
</LinearLayout>